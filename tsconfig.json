{
  "compilerOptions": {
    "target": "ESNext", // Set the target ECMAScript version (e.g., ES5, ES6, etc.)[]
    "declaration": true, // Generate .d.ts files
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Ensure compatibility with CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "declarationDir": "./dist", // Specify where to output the declaration files
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*" // Specify the files to include (e.g., your TypeScript source files)
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
